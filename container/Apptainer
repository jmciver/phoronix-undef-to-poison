Bootstrap: docker
From: ubuntu:{{ VERSION }}

%arguments
  VERSION=24.04
  USER_HOME=jmciver

%files
  user-config.xml /home/{{ USER_HOME }}/.phoronix-test-suite/
  local-phoronix-run-config.bash /home/{{ USER_HOME }}
  CMakePresetsLLVM.json /home/{{ USER_HOME}}
  CMakePresetsAlive2.json /home/{{ USER_HOME}}
  build-and-run.bash /home/{{ USER_HOME}}

%post
  apt-get update && \
    apt-get -y upgrade && \
    DEBIAN_FRONTEND=noninteractive apt-get -y install \
      apt-file \
      apt-utils \
      autoconf \
      bison \
      build-essential \
      clang \
      cmake \
      cmake-data \
      curl \
      fftw-dev \
      flex \
      git \
      less \
      libasio-dev \
      libboost-all-dev \
      libboost-iostreams-dev \
      libbrotli-dev \
      libcap2-bin \
      libcurl4-openssl-dev \
      libfftw3-dev \
      libfindbin-libs-perl \
      libfreetype6-dev \
      libjpeg-dev \
      libnl-genl-3-dev \
      libz3-dev \
      locales \
      mesa-utils \
      nasm \
      ninja-build \
      p7zip-full \
      php-cli \
      php-curl \
      php-xml \
      pkg-config \
      python3 \
      python3-psutil \
      re2c \
      sudo \
      tcl \
      tclsh \
      unzip \
      vulkan-tools \
      xorg-dev \
      yasm \
      z3 \
      zlib1g-dev && \
    apt-get clean autoclean && \
    rm -rf /var/lib/apt/lists/* && \
    localedef -i en_US -c -f UTF-8 -A /usr/share/locale/locale.alias en_US.UTF-8 && \
    setcap 'cap_sys_nice=eip' /usr/bin/nice && \
    rm $(readlink -f /usr/bin/g++) && rm $(readlink -f /usr/bin/gcc) && rm /usr/bin/g++ && rm /usr/bin/gcc

%environment
  export LANG=en_US.utf8
  export HOME=/tmp

%runscript
  /home/{{ USER_HOME }}/build-and-run.bash "$@"
